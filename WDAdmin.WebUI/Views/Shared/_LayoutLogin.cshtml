<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>
        <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
        <link rel="icon" href="@Url.Content("~/Content/favicon.ico")" type="image/x-icon" />

        @* Styles *@
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <!--[if IE]><link href="@Url.Content("~/Content/Site_ie.css")" rel="stylesheet" type="text/css" /><![endif]-->
        
        @* Scripts *@
        <!--[if IE]><script src="@Url.Content("~/Scripts/html5.js")" type="text/javascript"></script><![endif]-->
        <script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    </head>
    <body>
        <div id="pageWrap">
            <header id="header">
                <hgroup>
                    <h1 class="site_title"><div class="logo" style="background-image: url(@string.Format("/Content/Graphics/logo_{0}.png", UICulture))"></div></h1>
                    <h2 class="section_title">@LangResources.VirtualTransport</h2>  
                </hgroup>
            </header> <!-- end of header bar -->
            <section id="secondary_bar">
                <div class="user">
                    <p>@LangResources.LoggedOut</p>
                </div>
                <div class="breadcrumbs_container">                   
                    @if(Session["Help"] != null)
                    {
                        var link = "~/Content/Help/" + (string)Session["Help"];
                        <a class="current" href="@Url.Content(link)" >
                            <img alt="" style="float: right;" class="help" src="@Url.Content("~/Content/Graphics/help.png")" />
                        </a>
                    }
                </div>
            </section><!-- end of secondary bar -->
            <aside id="sidebar" class="column">
            </aside><!-- end of sidebar -->
            <section id="main" class="column">
                @RenderBody()
            </section>
        </div>
        <div id="version">@LangResources.Version 2.2.91</div>
    </body>
</html>
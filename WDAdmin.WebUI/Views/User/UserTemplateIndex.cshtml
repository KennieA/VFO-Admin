@model WDAdmin.WebUI.Models.UserTemplateViewModel

@{
    ViewBag.Title = LangResources.UserGroupManagement;
}

<script src="@Url.Content("~/Scripts/jquery.treeview.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/jquery.treeview.css")" rel="stylesheet" type="text/css" />

<h4 class="alert_info">@LangResources.UserGroupTemplateOverviewTitle</h4>

<article class="module width_full">
    <header><h3>@LangResources.UserGroupTemplateOverviewHeader</h3></header>
    <br />
    <div id="treeView">
        <div id="sidetreecontrol" style="margin-left: 50px; margin-bottom: 15px;"><a href="?#">@LangResources.ColapseAll</a> | <a href="?#">@LangResources.ExpandAll</a></div>
        @Html.Raw(@Model.TemplateTree)
    </div>
    <br />
</article>

<script type="text/javascript">
    $('#treeView ul').treeview({
        collapsed: false,
        animated: "fast",
        control: "#sidetreecontrol",
        prerendered: false,
        persist: "location"
    });
</script>
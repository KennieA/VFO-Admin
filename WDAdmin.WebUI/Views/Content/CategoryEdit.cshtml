@model WDAdmin.WebUI.Models.CategoryFormModel

@{
    ViewBag.Title = LangResources.ContentManagement;
}

<h4 class="alert_info">@LangResources.CategoryEditTitle</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <article class="module width_full">
        <header><h3>@LangResources.CategoryEditHeader</h3></header> 
        <br />@Html.HiddenFor(m => m.Id)
        <div class="editor-label">
            @Html.LabelFor(m => m.CategoryName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.CategoryName)  
            @Html.ValidationMessageFor(m => m.CategoryName)
        </div>
        <br />
        <input type="submit" value="@LangResources.SaveButton" />
        <button onclick="history.back(); return false;">@LangResources.BtnCancel</button>
    </article>
}

@Html.ValidationSummary(true, LangResources.ContentEditGeneralError)